<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:id="vbox" alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity"
      minHeight="-Infinity" minWidth="-Infinity" prefHeight="161.0" prefWidth="348.0"
      style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/11.0.1"
      fx:controller="org.Presentation.MainController">
    <children>
        <HBox fx:id="topPanel" alignment="TOP_RIGHT" prefHeight="22.0" prefWidth="600.0">
            <children>
                <ImageView fx:id="closeIcon" fitHeight="25.0" fitWidth="25.0" layoutX="585.0" layoutY="10.0"
                           pickOnBounds="true" preserveRatio="true">
                    <HBox.margin>
                        <Insets right="5.0" top="5.0"/>
                    </HBox.margin>
                    <image>
                        <Image url="@images/window button icons/close.png"/>
                    </image>
                </ImageView>
            </children>
        </HBox>
        <Label alignment="CENTER" text="Choose mode:" textFill="WHITE">
            <font>
                <Font size="30.0"/>
            </font>
        </Label>
        <HBox alignment="CENTER" spacing="30.0">
            <children>
                <Button fx:id="BTNtui" mnemonicParsing="false" onMouseClicked="#onMouseClicked" prefHeight="60.0"
                        prefWidth="120.0" styleClass="buttonHover" stylesheets="@style.css" text="TUI"
                        textAlignment="CENTER" textFill="WHITE">
                    <font>
                        <Font size="20.0"/>
                    </font>
                </Button>
                <Button fx:id="BTNgui" mnemonicParsing="false" onMouseClicked="#onMouseClicked" prefHeight="60.0"
                        prefWidth="120.0" styleClass="buttonHover" stylesheets="@style.css" text="GUI"
                        textAlignment="CENTER" textFill="WHITE">
                    <font>
                        <Font size="22.0"/>
                    </font>
                </Button>
            </children>
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
            <VBox.margin>
                <Insets bottom="10.0" top="10.0"/>
            </VBox.margin>
        </HBox>
    </children>
</VBox>
