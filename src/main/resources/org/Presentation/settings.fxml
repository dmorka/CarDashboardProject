<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.*?>
<?import org.controlsfx.control.ToggleSwitch?>
<?import org.Presentation.TextFieldLimited?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:id="vbox" maxHeight="1.7976931348623157E308"
      maxWidth="1.7976931348623157E308"
      prefHeight="200.0" prefWidth="607.0" style="-fx-background-color: black;"
      xmlns="http://javafx.com/javafx/11.0.1" fx:controller="org.Presentation.SettingsController">
    <children>
        <HBox fx:id="topPanel" alignment="TOP_RIGHT" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="35.0"
              spacing="5.0">
            <children>
                <ImageView fx:id="minimizeIcon" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true"
                           preserveRatio="true">
                    <image>
                        <Image url="@images/window button icons/minimize1.png"/>
                    </image>
                </ImageView>
                <ImageView fx:id="maximizeIcon" fitHeight="20.0" fitWidth="20.0" layoutX="10.0" layoutY="10.0"
                           pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@images/window button icons/maximize.png"/>
                    </image>
                </ImageView>
                <ImageView fx:id="closeIcon" fitHeight="25.0" fitWidth="25.0" layoutX="30.0" layoutY="10.0"
                           pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@images/window button icons/close.png"/>
                    </image>
                </ImageView>
            </children>
            <padding>
                <Insets right="10.0" top="10.0"/>
            </padding>
        </HBox>
        <HBox alignment="CENTER">
            <children>
                <BorderPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="10000.0" prefWidth="10000.0">
                    <center>
                        <GridPane fx:id="gridPane" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity"
                                  minHeight="-Infinity" minWidth="-Infinity" prefHeight="200.0" prefWidth="607.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="280.0" minWidth="10.0"
                                                   prefWidth="279.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="191.0" minWidth="7.0" prefWidth="22.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="379.0" minWidth="10.0"
                                                   prefWidth="286.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints maxHeight="144.0" minHeight="10.0" prefHeight="141.0"
                                                vgrow="SOMETIMES"/>
                                <RowConstraints maxHeight="68.0" minHeight="10.0" prefHeight="39.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0" stylesheets="@style.css">
                                    <children>
                                        <HBox alignment="CENTER_LEFT" prefHeight="25.0" prefWidth="226.0" spacing="5.0">
                                            <children>
                                                <Label text="Max speed:" textFill="WHITE">
                                                    <font>
                                                        <Font size="15.0"/>
                                                    </font>
                                                </Label>
                                                <!--<TextField fx:id="TFLmaxSpeed" prefHeight="25.0" prefWidth="51.0" />-->
                                                <TextFieldLimited fx:id="TFLmaxSpeed" prefHeight="25.0" prefWidth="51.0"
                                                                  promptText="280"/>
                                                <Label text="km/h" textFill="WHITE">
                                                    <font>
                                                        <Font size="15.0"/>
                                                    </font>
                                                </Label>
                                            </children>
                                            <opaqueInsets>
                                                <Insets/>
                                            </opaqueInsets>
                                        </HBox>
                                        <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="10.0" prefHeight="25.0"
                                              prefWidth="226.0" spacing="5.0">
                                            <children>
                                                <Label text="Dashboard light intensity:" textFill="WHITE">
                                                    <font>
                                                        <Font size="15.0"/>
                                                    </font>
                                                </Label>
                                                <Slider fx:id="SLdashboardLightIntensity" minorTickCount="10"
                                                        prefHeight="14.0" prefWidth="105.0" value="50.0"/>
                                            </children>
                                            <opaqueInsets>
                                                <Insets/>
                                            </opaqueInsets>
                                        </HBox>
                                        <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="80.0" prefHeight="25.0"
                                              prefWidth="226.0" spacing="5.0">
                                            <children>
                                                <Label text="Automatic low beam:" textFill="WHITE">
                                                    <font>
                                                        <Font size="15.0"/>
                                                    </font>
                                                </Label>
                                                <ToggleSwitch fx:id="TSautoLowBeam" style="-fx-text-fill: white;"
                                                              textFill="WHITE">
                                                    <font>
                                                        <Font size="15.0"/>
                                                    </font>
                                                </ToggleSwitch>
                                            </children>
                                            <opaqueInsets>
                                                <Insets/>
                                            </opaqueInsets>
                                        </HBox>
                                    </children>
                                </VBox>
                                <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0" GridPane.columnIndex="2">
                                    <children>
                                        <HBox alignment="CENTER_LEFT" prefHeight="25.0" prefWidth="226.0" spacing="5.0">
                                            <children>
                                                <Label text="Engine type:" textFill="WHITE">
                                                    <font>
                                                        <Font size="15.0"/>
                                                    </font>
                                                </Label>
                                                <RadioButton fx:id="RDengineTypePetrol" mnemonicParsing="false"
                                                             selected="true" stylesheets="@style.css" text="Petrol"
                                                             textFill="WHITE">
                                                    <font>
                                                        <Font size="15.0"/>
                                                    </font>
                                                    <toggleGroup>
                                                        <ToggleGroup fx:id="TG_engineType"/>
                                                    </toggleGroup>
                                                </RadioButton>
                                                <RadioButton fx:id="RDengineTypeDiesel" mnemonicParsing="false"
                                                             text="Diesel" textFill="WHITE"
                                                             toggleGroup="$TG_engineType">
                                                    <font>
                                                        <Font size="15.0"/>
                                                    </font>
                                                </RadioButton>
                                            </children>
                                            <opaqueInsets>
                                                <Insets/>
                                            </opaqueInsets>
                                        </HBox>
                                        <HBox alignment="CENTER_LEFT" prefHeight="25.0" prefWidth="226.0" spacing="5.0">
                                            <children>
                                                <Label text="Number of gears:" textFill="WHITE">
                                                    <font>
                                                        <Font size="15.0"/>
                                                    </font>
                                                </Label>
                                                <RadioButton fx:id="RDnumberOfGears5" mnemonicParsing="false" text="5"
                                                             textFill="WHITE">
                                                    <font>
                                                        <Font size="15.0"/>
                                                    </font>
                                                    <toggleGroup>
                                                        <ToggleGroup fx:id="TG_numberOfGears"/>
                                                    </toggleGroup>
                                                </RadioButton>
                                                <RadioButton fx:id="RDnumberOfGears6" mnemonicParsing="false"
                                                             selected="true" text="6" textFill="WHITE"
                                                             toggleGroup="$TG_numberOfGears">
                                                    <font>
                                                        <Font size="15.0"/>
                                                    </font>
                                                </RadioButton>
                                            </children>
                                            <opaqueInsets>
                                                <Insets/>
                                            </opaqueInsets>
                                        </HBox>
                                        <HBox alignment="CENTER_LEFT" prefHeight="25.0" prefWidth="226.0" spacing="5.0">
                                            <children>
                                                <Label text="Music player shuffle mode:" textFill="WHITE">
                                                    <font>
                                                        <Font size="15.0"/>
                                                    </font>
                                                </Label>
                                                <ToggleSwitch fx:id="TSshuffleMode" textFill="WHITE">
                                                    <font>
                                                        <Font size="15.0"/>
                                                    </font>
                                                </ToggleSwitch>
                                            </children>
                                            <opaqueInsets>
                                                <Insets/>
                                            </opaqueInsets>
                                        </HBox>
                                        <HBox prefHeight="100.0" prefWidth="200.0" spacing="5.0">
                                            <children>
                                                <Label text="Playlist folder:" textFill="WHITE">
                                                    <font>
                                                        <Font size="15.0"/>
                                                    </font>
                                                </Label>
                                                <TextField fx:id="TFplaylistFolderPath" maxWidth="-Infinity"
                                                           prefHeight="25.0" prefWidth="104.0"/>
                                                <Button fx:id="BTNchoosePlaylistFolder" mnemonicParsing="false"
                                                        onMouseClicked="#chooseDirectory" styleClass="buttonHover"
                                                        stylesheets="@style.css" text="Choose" textFill="WHITE">
                                                    <font>
                                                        <Font name="System Bold" size="12.0"/>
                                                    </font>
                                                </Button>
                                            </children>
                                        </HBox>
                                    </children>
                                    <GridPane.margin>
                                        <Insets left="10.0"/>
                                    </GridPane.margin>
                                </VBox>
                                <AnchorPane prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1">
                                    <children>
                                        <Line endX="5.0" endY="61.0" layoutX="5.0" layoutY="60.0" startX="5.0"
                                              startY="-59.0"/>
                                    </children>
                                </AnchorPane>
                                <AnchorPane prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="2"
                                            GridPane.rowIndex="1">
                                    <children>
                                        <Button fx:id="saveButton" layoutX="220.0" layoutY="1.0" mnemonicParsing="false"
                                                onMouseClicked="#save" styleClass="buttonHover" stylesheets="@style.css"
                                                text="Save" textFill="WHITE">
                                            <font>
                                                <Font name="System Bold" size="15.0"/>
                                            </font>
                                        </Button>
                                    </children>
                                </AnchorPane>
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </padding>
                        </GridPane>
                    </center>
                </BorderPane>
            </children>
        </HBox>
    </children>
</VBox>
